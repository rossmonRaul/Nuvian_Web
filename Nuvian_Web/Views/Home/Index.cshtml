
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<body class="imgLogin  ">


    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-white text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 ">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <div class="text-center"><img class="imgLogo " src="~/images/iconCIIADHEL2.png" /></div>

                                <div class="form-group">
                                    <label class="etiquetas" for="InputUsuario1">Usuario</label>
                                    <input type="text" pattern="[1-9]-?\d{4}-?\d{4}" maxlength="10" title="Formato: 1-2345-6789" class="form-control" required="" id="txtUsuario" onkeyup="validarDATA()" onkeypress="return (event.charCode >= 48 && event.charCode <= 57)">
                                    <h6 id="UserError" class="form-text text-muted"></h6>
                                </div>

                                <div class="form-group">
                                    <label class="etiquetas" for="InputPassword1">Contraseña</label>
                                    <input type="password" class="form-control" id="txtPassword" maxlength="25" onkeyup="validarDATA()" onkeypress="return (event.charCode >= 48 && event.charCode <= 57 || event.charCode >= 65 && event.charCode <= 90 || event.charCode >= 97 && event.charCode <= 122)" required>
                                    <h6 id="PasswordError" class="form-text text-muted"></h6>

                                </div>
                                <button type="submit" class="btn btn-primary btn-block btnIngresar" id="log">Ingresar</button>
                                <br />
                                <div class="form-group text-center">

                                    <a href="#" data-toggle="popover" title="Información" data-content="Comuníquese por correo electrónico a soportenuvian@rossmon.co.cr o bien comuníquese por vía telefónica con el administrador al +506 85903615">¿Olvidó su contraseña?</a>
                                    <br />
                                    <label id="errormsg" style="color:red;"></label>
                                </div>



                            </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</body>

@section Scripts{
    <script src="~/js/login.js"></script>



}
